<% extensions.each do |extension| %>
  <div class="small-6 columns">
    <div class="small-1 columns">
      <%= link_to_gravatar(extension) %>
    </div>
    <div class="small-11 columns">
      <% if extension.privacy? %>
        <p class="small-12">
          <i class="fa fa-eye-slash"></i>
          <span>Private</span>
        </p>
      <% end %>
      <header>
        <%= link_to extension.name, owner_scoped_extension_url(extension) %>
        <div class="tier-declaration">
          <span><%= extension.latest_extension_version.try(:version) %></span>
          <i class="fa fa-<%= extension.tier_icon_name %>"></i>
          <span><%= extension.tier_name %> tier</span>
        </div>
      </header>

      <p class='truncate lines-3'><%= extension.description %></p>
      <p class="tags">
        <% extension.tags.each do |tag| %>
          <span class="extension_tag"><%= link_to tag.name, extensions_path(q: tag.name) %></span>
        <% end %>
      </p>
    </div>
  </div>
<% end %>

